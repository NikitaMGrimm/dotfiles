# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines
  name = Nikita Maximilian Grimm
  email = nikitagrimm03@gmail.com

[core]
  editor = nvim

[init]
  defaultBranch = main

[url "https://github.com/"]
  insteadOf = gh:

[url "https://gist.github.com/"]
  insteadOf = gist:

[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = red

[alias]
  # Show all branches
  br = branch -av 
  # Show the current branch name (useful for shell prompts) 
  brname = !git branch | grep "^*" | awk '{ print $2 }' 

[web]
  browser = firefox

[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
